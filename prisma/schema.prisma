generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model revenues {
  id                String   @id
  imageUrl          String   @db.Text
  title             String
  slug              String   @unique
  description       String   @db.LongText()
  preparation       Int
  cooking           Int
  total             Int
  category          String
  incomeQuantity    Int
  incomeType        String
  calories          Int
  presentation      String   @db.LongText()
  methodPreparation String   @db.LongText()
  ingredients       String   @db.LongText()
  createAt          DateTime
  updateAt          DateTime
  userId            String?
  user              user?    @relation(fields: [userId], references: [id], map: "Revenues_userId_fkey")

  @@index([userId], map: "Revenues_userId_fkey")
}

model user {
  id          String     @id
  avatarUrl   String
  name        String
  function    String
  description String     @db.LongText()
  email       String     @unique()
  revenues    revenues[]
}
